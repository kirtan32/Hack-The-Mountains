<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundblack"
    tools:context=".treevisualizer">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tree Visualizer"
        android:textAllCaps="false"
        android:textColor="@color/lightwhite"
        android:textSize="30sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.066" />

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="360dp"
        android:layout_height="500dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.888">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/binarysearchtree"
                android:layout_width="340dp"
                android:layout_height="90dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/backgreen"
                android:onClick="reachtobinarytree"
                android:text="Binary Search Tree"
                android:textAllCaps="false"
                android:textColor="@color/backgroundblack"
                android:textSize="25sp"
                android:textStyle="normal">

            </Button>

            <Button
                android:id="@+id/avltree"
                android:layout_width="340dp"
                android:layout_height="90dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/backgreen"
                android:onClick="reachtoavltree"
                android:text="AVL Tree"
                android:textAllCaps="false"
                android:textColor="@color/backgroundblack"
                android:textSize="25sp"
                android:textStyle="normal">

            </Button>

            <Button
                android:id="@+id/bbplustree"
                android:layout_width="340dp"
                android:layout_height="90dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/backgreen"
                android:onClick="reachtobtree"
                android:text="B/B+ Tree"
                android:textAllCaps="false"
                android:textColor="@color/backgroundblack"
                android:textSize="25sp"
                android:textStyle="normal">

            </Button>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>