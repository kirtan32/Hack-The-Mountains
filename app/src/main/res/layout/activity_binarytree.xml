<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundblack"
    tools:context=".binarytree">

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@drawable/buttontool"
        android:text="Back"
        android:onClick="getBackBinary"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.061"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.027">

    </Button>

    <TextView
        android:id="@+id/textView2binary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Binary Search Tree Visualizer"
        android:textColor="@color/colorAccent"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.14">

    </TextView>

    <TextView
        android:id="@+id/textViewbinary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Context [In coma saperated]"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.348"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.234">

    </TextView>

    <EditText
        android:id="@+id/contextbinary"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text=""
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:textColorHint="#888888"
        android:hint="e.g. 5,10,15 etc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.349">

    </EditText>

    <Button
        android:id="@+id/buttonbinary"
        android:layout_width="264dp"
        android:layout_height="60dp"
        android:background="@drawable/buttontool"
        android:onClick="solvebinary"
        android:text="Solve "
        android:textColor="#32343e"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.544" />


</androidx.constraintlayout.widget.ConstraintLayout>